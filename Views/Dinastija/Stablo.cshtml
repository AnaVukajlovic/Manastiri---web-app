@{
    ViewData["Title"] = "Porodično stablo Nemanjića";
}

<section class="sekcija">
    <div class="container">
        <header class="sekcija-header">
            <h1>Porodično stablo dinastije Немањића</h1>
            <p>
                Shematski prikaz osnovnih grana porodičnog stabla dinastije Немањића.
                Klikom na ime vladara možeš da odeš na njegov detaljniji prikaz (ako postoji u delu “Vladari”).
            </p>
        </header>

        <div class="stablo-wrapper">
            <div class="stablo">
                <ul>
                    <li>
                        <div class="cvor">
                            <span class="cvor-ime">
                                <a asp-controller="Vladari"
                                   asp-action="Detalji"
                                   asp-route-id="1"
                                   asp-route-source="stablo">
                                    Стефан Немања
                                </a>
                            </span>
                            <span class="cvor-info">osnivač dinastije</span>
                        </div>
                        <ul>
                            <!-- 1) Vukan (najstariji sin) -->
                            <li>
                                <div class="cvor">
                                    <span class="cvor-ime">Вукан Немањић</span>
                                    <span class="cvor-info">najstariji sin Stefana Nemanje</span>
                                </div>
                            </li>

                            <!-- 2) Stefan Prvovenčani (srednji sin) -->
                            <li>
                                <div class="cvor">
                                    <span class="cvor-ime">
                                        <a asp-controller="Vladari"
                                           asp-action="Detalji"
                                           asp-route-id="2"
                                           asp-route-source="stablo">
                                            Стефан Првовенчани
                                        </a>
                                    </span>
                                    <span class="cvor-info">prvi krunisani kralj</span>
                                </div>
                                <ul>
                                    <li>
                                        <div class="cvor">
                                            <span class="cvor-ime">Стефан Радослав</span>
